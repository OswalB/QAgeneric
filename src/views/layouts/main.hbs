<!doctype html>
<html lang="es">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!--toastr - alerts-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

  <!-- FONT AWESOME-->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- custom CSS-->

  <link rel="stylesheet" href="/css/main.css">
  <title id="title-main">El Mana</title>
</head>

<body>
  <!-- NAVEGACION SUPERIOR -->
  <div class="nav-bar-top-container mx-0 p-0 d-flex ">
    <div id="nav-menu" class="text-white  d-inline-flex">
      <a class="btn align-self-center text-white btnmenu" id="btn-menu">
        <i class="fa fa-bars " aria-hidden="true"></i>
        <strong class="px-1">Mana</strong>
      </a>

    </div>
    <div id="nav-t" class=" ">
      {{>botones-navbartop}}
    </div>
  </div>
  

  <!-- SECCION QUE OCUPA EL ANCHO DE LA PANTALLA DEBAJO DE LA NAV SUPERIOR -->

  <div class="main-container d-flex">
    <!-- MENU LATERAL -->
    <nav class="sidebar" id="side-nav">
      <div class="header-box px-2 pt-3 pb-4">
        {{>botones-sidebar}}
      </div>
    </nav>
    <!-- CONTENIDO DE LA APLICACION -->
    <div class="container  px-lg-5 mx-lg-5">
      <div id="content-w" class="content-w"></div>
      <!-- barra de informcion de usuario -->
      <div class="text-secondary d-flex justify-content-between mx-1">
          <h5 class="text-dark">
            {{panel.titulo}}
          </h5>
          <span>
            {{#if user}}
                {{@root.nik}}
            {{else}}
                No ha iniciado sesi√≥n
            {{/if}}
          </span>
      </div>
      
        {{>messages}}
        {{>errors}}
        {{{body}}}
        {{#if panel.boton-pagination}}  
          {{>pagination}}
        {{/if}} 
        {{>footerpage}}
      
    </div>
  </div>


  <!-- Option 1: Bootstrap Bundle with Popper -->


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>


  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous">
    </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script src="/js/main.js"></script>


</body>

</html>